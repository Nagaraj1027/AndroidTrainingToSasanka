<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Screen" />

            <Button
                android:id="@+id/btn1"
                style="@style/btn_stye"
                android:layout_below="@+id/tv1"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="GOTO ACTIVITY LIFECYCLE"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn2"
                style="@style/btn_stye"
                android:layout_below="@+id/btn1"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="GOTO EXPLICIT INTENT"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn3"
                style="@style/btn_stye"
                android:layout_below="@+id/btn2"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="GOTO IMPLICIT INTENT"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn4"
                style="@style/btn_stye"
                android:layout_below="@+id/btn3"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="GOTO STATIC FRAGMENTS"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn5"
                style="@style/btn_stye"
                android:layout_below="@+id/btn4"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="GOTO DYNAMIC FRAGMENTS"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/btn6"
                style="@style/btn_stye"
                android:layout_below="@+id/btn5"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="GOTO LISTVIEW EXAMPLE"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn7"
                style="@style/btn_stye"
                android:layout_below="@+id/btn6"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="GOTO RECYCLERVIEW EXAMPLE"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn8"
                style="@style/btn_stye"
                android:layout_below="@+id/btn7"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="GOTO DATABASE EXAMPLE"
                android:textColor="#ffffff" />

            <!--<Button
                android:id="@+id/btnCall"
                style="@style/btn_stye"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:text="MAKE THE CALL" />

            <Button
                android:id="@+id/btnClear"
                style="@style/btn_stye"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:layout_below="@id/btnCall"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:text="CLEAR PREFERENCES" />-->
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
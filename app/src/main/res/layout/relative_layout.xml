<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Screen" />

    <Button
        android:id="@+id/btn1"
        style="@style/btn_stye"
        android:layout_below="@+id/tv1"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="GOTO ACTIVITY LIFECYCLE"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn2"
        style="@style/btn_stye"
        android:layout_below="@+id/btn1"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="GOTO EXPLICIT INTENT"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn3"
        style="@style/btn_stye"
        android:layout_below="@+id/btn2"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="GOTO IMPLICIT INTENT"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn4"
        style="@style/btn_stye"
        android:layout_below="@+id/btn3"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="GOTO STATIC FRAGMENTS"
        android:textColor="#ffffff" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@id/btn3"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background= "@color/colorGray"/>

    <Button
        android:id="@+id/btnCall"
        style="@style/btn_stye"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:text="MAKE THE CALL" />

    <Button
        android:id="@+id/btnClear"
        style="@style/btn_stye"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_below="@id/btnCall"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:text="CLEAR PREFERENCES" />

</RelativeLayout>